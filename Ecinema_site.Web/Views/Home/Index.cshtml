@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section bg-dark text-white py-5 mb-4">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6 offset-md-1">
                    <h1 class="display-4 fw-bold">Welcome to E-Cinema</h1>
                    <p class="lead">Your ultimate destination for streaming movies and TV shows.</p>
                    <div class="input-group mb-3" style="max-width: 1200px;">
                        <input type="text" class="form-control" placeholder="Search for movies...">
                        <button class="btn btn-primary" type="button">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Movies Section -->
    <div class="container px-4">
        <h2 class="mb-4">Featured Movies</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
            <!-- Movie Card 1 -->
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300x450" class="img-fluid rounded-start h-100" alt="Movie Poster" style="object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Movie Title 1</h5>
                                <p class="card-text">Action, Adventure</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">4.5/5</span>
                                    <button class="btn btn-outline-primary">Watch Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Movie Card 2 -->
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300x450" class="img-fluid rounded-start h-100" alt="Movie Poster" style="object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Movie Title 2</h5>
                                <p class="card-text">Drama, Romance</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">4.2/5</span>
                                    <button class="btn btn-outline-primary">Watch Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Movie Card 3 -->
            <div class="col">
                <div class="card h-100">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="https://via.placeholder.com/300x450" class="img-fluid rounded-start h-100" alt="Movie Poster" style="object-fit: cover;">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Movie Title 3</h5>
                                <p class="card-text">Comedy, Family</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">4.8/5</span>
                                    <button class="btn btn-outline-primary">Watch Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <div class="container px-4 mt-5">
        <h2 class="mb-4">Browse by Category</h2>
        <div class="row g-3">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Action</h5>
                        <p class="card-text">100+ Movies</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Drama</h5>
                        <p class="card-text">150+ Movies</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Comedy</h5>
                        <p class="card-text">120+ Movies</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Sci-Fi</h5>
                        <p class="card-text">80+ Movies</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(to right, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            min-height: 60vh;
            display: flex;
            align-items: center;
            position: relative;
        }
        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0,0,0,0.8), rgba(0,0,0,0.4));
            z-index: 1;
        }
        .hero-section .container-fluid {
            position: relative;
            z-index: 2;
        }
        .hero-section h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }
        .hero-section .lead {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }
        .hero-section .input-group {
            max-width: 1200px;
        }
        .hero-section .input-group .form-control {
            padding: 1rem;
            font-size: 1.1rem;
        }
        .hero-section .input-group .btn {
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
            border: none;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 1rem;
            transform: scale(1.1);
            transform-origin: center;
        }
        .card:hover {
            transform: scale(1.1) translateY(-5px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }
        .card-body {
            padding: 1.5rem;
        }
        .badge {
            font-size: 0.9rem;
            padding: 0.5em 0.8em;
        }
        .btn-outline-primary {
            transition: all 0.3s ease;
        }
        .btn-outline-primary:hover {
            transform: translateY(-2px);
        }
        @@media (max-width: 768px) {
            .hero-section {
                min-height: 40vh;
            }
            .hero-section h1 {
                font-size: 2.5rem;
            }
            .hero-section .lead {
                font-size: 1.2rem;
            }
            .hero-section .input-group {
                max-width: 100%;
            }
            .card {
                margin-bottom: 1rem;
                transform: scale(1);
                transform-origin: center;
            }
            .card:hover {
                transform: translateY(-5px);
            }
        }
    </style>
}

