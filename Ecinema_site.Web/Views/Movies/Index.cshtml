@model List<dynamic>
@{
    ViewBag.Title = "Movies";
}

<div class="container py-4">
    <h1 class="mb-3">Movies</h1>
    
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
        <!-- Movie 1: Alien -->
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@Url.Content("~/Content/Images/Movies/Movie_poster_1.png")" class="card-img-top" alt="Alien">
                <div class="card-body p-2">
                    <h6 class="card-title mb-1">Alien</h6>
                    <p class="card-text small mb-1">Action, Adventure, Horror</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">4.5/5</span>
                        <a href="@Url.Action("Details", "Movies", new { id = 1 })" class="btn btn-sm btn-outline-primary">Watch Now</a>
                    </div>
                </div>
            </div>
        </div>

