                    <p class="card-text">Adventure, Comedy</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">4.8/5</span>
                        <a href="@Url.Action("Details", "Movies", new { id = 3 })" class="btn btn-outline-primary">Watch Now</a>
