@model List<dynamic>
@{
    ViewBag.Title = "Movies";
}

<div class="container py-5">
    <h1 class="mb-4">Movies</h1>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <!-- Movie 1: Alien -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="@Url.Content("~/Content/Images/Movies/Movie_poster_1.png")" class="card-img-top" alt="Alien">
                <div class="card-body">
                    <h5 class="card-title">Alien</h5>
                    <p class="card-text">Action, Adventure, Horror</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">4.5/5</span>
                        <a href="@Url.Action("Details", "Movies", new { id = 1 })" class="btn btn-outline-primary">Watch Now</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movie 2: Fight Club -->
        <div class="col">
            <div class="card h-100 shadow">
                <img src="@Url.Content("~/Content/Images/Movies/Movie_poster_2.png")" class="card-img-top" alt="Fight Club">
                <div class="card-body">
                    <h5 class="card-title">Fight Club</h5>
                    <p class="card-text">Drama, Thriller</p>
                    <div class="d-flex justify-content-between align-items-center">
